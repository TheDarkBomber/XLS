extern printchar(byte ascii) : byte; // Defined manually in lib.asm

impl say-hi() : void {
	printchar('H');
	printchar('e');
	printchar('y');
	printchar(' ');
	printchar('t');
	printchar('h');
	printchar('e');
	printchar('r');
	printchar('e');
	printchar(',');
	printchar(' ');
	printchar('g');
	printchar('a');
	printchar('l');
	printchar('a');
	printchar('x');
	printchar('y');
	printchar('!');
	printchar('\n');
}

impl main(argc) {
	say-hi();
	if (argc > 1) {
		printchar('B');
		printchar('A');
		printchar('D');
		printchar('!');
		printchar('\n');
		1; // Return error, 1.
	}
}
