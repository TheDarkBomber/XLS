extern printchar(byte ascii) : byte; // Defined manually in lib.asm

impl say-hi() : void {
	printchar(0x48); // 'H'
	printchar(0x65); // 'e'
	printchar(0x79); // 'y'
	printchar(0x20); // ' '
	printchar(0x74); // 't'
	printchar(0x68); // 'h'
	printchar(0x65); // 'e'
	printchar(0x72); // 'r'
	printchar(0x65); // 'e'
	printchar(0x2C); // ','
	printchar(0x20); // ' '
	printchar(0x67); // 'g'
	printchar(0x61); // 'a'
	printchar(0x6C); // 'l'
	printchar(0x61); // 'a'
	printchar(0x78); // 'x'
	printchar(0x79); // 'y'
	printchar(0x21); // '!'
	printchar(0x0A); // newline
}

impl main(argc) {
	say-hi();
	if (argc > 1) {
		printchar(0x42); // 'B'
		printchar(0x41); // 'A'
		printchar(0x44); // 'D'
		printchar(0x21); // '!'
		printchar(0x0A); // newline
		1; // Return error, 1.
	}
}
